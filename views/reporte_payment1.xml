<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="reporte_account_payment1">
      <t t-call="web.html_container">
          <t t-set="data_report_margin_top" t-value="1"/>
          <t t-set="data_report_header_spacing" t-value="1"/>
          <t t-set="data_report_dpi" t-value="110"/>

          <t t-foreach="docs" t-as="o">
              <div class="article">
                  <div class="page">
    
                      <div style="font-size: 130%; position: absolute; top: 3.2cm; left: 4cm">
                          GUATEMALA, <span t-field="o.date"/>
                      </div>
                      <div style="font-size: 130%; position: absolute; top: 3cm; left: 23.5cm">
                          <span t-esc="'{0:,.2f}'.format(o.amount)"/>
                      </div>
    
                      <div style="font-size: 130%; position: absolute; top: 3.9 cm; left: 4cm; width: 19cm">
                          <span t-esc="o.nombre_impreso or o.partner_id.name"/>
                      </div>
                      <div style="font-size: 130%; text-transform: uppercase; position: absolute; top: 4.8cm; left: 4cm; width: 20cm">
                          <span t-esc="a_letras(o.amount)"/>
                      </div>
                      <div t-if="o.no_negociable == True" style="font-size: 130%; position: absolute; top: 7.5cm; left: 3cm">
                          <span>NO  NEGOCIABLE</span>
                      </div>
                      <div style="font-size: 130%; position: absolute; top: 20cm; left: 2cm; width: 15cm">
                          DESCIPCION:  <span t-field="o.ref"/>
                      </div>
    
                      <div style="font-size: 130%; position: absolute; top: 23cm; left: 2cm; width: 15cm">
                          NOMBRE  DE  LA  EMPRESA:  <span t-esc="o.partner_id.name"/>
                      </div>
                      <div style="font-size: 130%;position: absolute; top: 22cm; left: 2cm; width: 15cm">
                          NO.  DE  CHEQUE:  <span t-field="o.move_id.name"/>
                      </div>
    
    
                      <div style="position: absolute; top: 12cm; left: 2cm;font-size: 130%;">
                          <table>
                              <tbody>
                                  <tr t-foreach="o.move_id.line_ids" t-as="l">
                                      <td style="width: 0cm">
                                          <span t-field="l.account_id.code"/>
                                      </td>
                                      <td style="width: 13.5cm">
                                          <span t-field="l.account_id.name"/>
                                      </td>
                                      <td style="width: 3cm">
                                      </td>
    
                                      <td style="width: 1.7cm" class="text-right">
                                          <span t-field="l.debit" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                      </td>
                                      <td style="width: 1cm">
                                      </td>
                                      <td style="width: 2cm" class="text-right">
                                          <span t-field="l.credit" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                      </td>
                                  </tr>
                              </tbody>
                          </table>
                      </div>
    
                      <div style="position: absolute; top: 25cm; left: 1.3cm;font-size: 130%;">
                          <table>
                              <tbody>
                                  <tr>
                                      <td style="width: 18.5cm">
                                      </td>
                                      <td style="width: 2.9cm" class="text-right">
                                          <span t-esc="totales(o)['debito']" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                      </td>
                                      <td style="width: 0.5cm">
                                      </td>
                                      <td style="width: 2cm" class="text-right">
                                          <span t-esc="totales(o)['credito']" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                      </td>
                                  </tr>
                              </tbody>
                          </table>
                      </div>
    
                      <div style="position: absolute; top: 26.5cm; left: 1.5cm;font-size: 130%;">
                          <table>
                              <tbody>
                                  <tr>
                                      <td style="width: 0cm">
                                          <span t-field="user.name"/>
                                      </td>
                                      <td style="width: 1">
                                      </td>
                                  </tr>
                              </tbody>
                          </table>
                      </div>
    
                  </div>
              </div>
          </t>
      </t>

    </template>
</odoo>
